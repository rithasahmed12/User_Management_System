<% include('../layouts/header.ejs') %>
<link rel="stylesheet" href="/adminDashboard.css">
<% include('../layouts/center.ejs') %>

<div class="container">
  <h1>Dashboard</h1>

  <a href="/admin/new-user">Add New User</a>
  <br><br>

  <form>
    <input type="text" placeholder="Search Username, email, mobile no." name="search">
    <input type="submit" value="Search">
  </form>

  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% if (users.length > 0) { %>
      <% for (let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].name %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].mobile %></td>
          <td>
            <a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
          </td>
          <td>
            <a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
          </td>
        </tr>
      <% } %>
    <% } else { %>
      <tr>
        <td colspan="5">Users Not Found</td>
      </tr>
    <% } %>

  </table>
  <br>

<%
for(let j = 1 ; j <= totalPages ; j++){
    %>
    <a href="?page=<%= j %>"><%= j %></a>
    <%

}
%>
<br><br>



  <a href="/admin/home">Go to Home</a>
</div>

<% include('../layouts/footer.ejs') %>
